<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.bidzis.rsystem.Role.RoleManagement">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show all role"
        android:id="@+id/btRoleShowAllRole"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save role"
        android:id="@+id/btRoleSave"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btRoleShowAllRole"
        android:layout_alignRight="@+id/btRoleShowAllRole"
        android:layout_alignEnd="@+id/btRoleShowAllRole" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remove role"
        android:id="@+id/btRoleRemove"
        android:layout_below="@+id/btRoleSave"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/btRoleSave"
        android:layout_alignEnd="@+id/btRoleSave" />
</RelativeLayout>
